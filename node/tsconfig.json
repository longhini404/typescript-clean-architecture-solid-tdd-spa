{
  "compilerOptions": {
      "experimentalDecorators": true,
      "outDir": "dist",
      "module": "commonjs",
      "target": "es2019",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "rootDirs": ["src", "tests"],
      "baseUrl": "src",
      "paths": {
          "@/*": ["*"],
          "@/tests/*": ["../tests/*"]
      }
  },
  "include": [
      "src",
      "tests"
  ],
  "exclude": []
}
