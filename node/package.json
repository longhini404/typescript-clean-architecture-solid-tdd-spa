{
  "name": "backend_node",
  "version": "1.0.0",
  "description": "Backend Node",
  "main": "index.js",
  "scripts": {
    "start": "node dist/src/main/server.js",
    "build": "cross-env NODE_ENV=production tsc --project tsconfig.build.json",
    "start:dev": "cross-env NODE_ENV=dev nodemon --watch 'src/' --exec 'ts-node src/main/server.ts' -e ts",
    "start:prod": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register dist/src/main/server.js",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand --no-cache",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --config ./src/infra/db/postgres/ormconfig.ts",
    "migration:run": "node --require ts-node/register ./node_modules/typeorm/cli.js --config ./src/infra/db/postgres/ormconfig.ts migration:run",
    "migration:revert": "node --require ts-node/register ./node_modules/typeorm/cli.js --config ./src/infra/db/postgres/ormconfig.ts migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^14.14.16",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "git-commit-msg-linter": "^3.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.4.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@sentry/node": "^6.13.2",
    "@sentry/tracing": "^6.13.2",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "husky": "4.3.6",
    "js-brasil": "^2.4.8",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.6",
    "pg": "^8.6.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.34"
  },
  "prettier": {
    "semi": false,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 100
  },
  "_moduleAliases": {
    "@": "src"
  }
}
